{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "novaflow-ui",
  "version": "1.0.0",
  "identifier": "com.novaflow.app",
  "build": {
    "frontendDist": "../.next",
    "devUrl": "http://localhost:3000/",
    "beforeDevCommand": "bun --bun run dev",
    "beforeBuildCommand": "bun --bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Novaflow",
        "width": 1500,
        "height": 1200,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "theme": "Dark",
        "windowEffects": null
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}