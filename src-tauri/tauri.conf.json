{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "novaflow",
  "version": "1.0.1",
  "identifier": "com.novaflow.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "novaflow",
        "width": 1200,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen",
        "width": 900,
        "height": 450,
        "resizable": false,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}